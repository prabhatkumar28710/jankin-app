pipeline {
    agent none

    stages {
        stage('Withdocker') {
            agent {
                docker {
                    image 'node:latest'
                    args '-p 3000:3000'
                    reuseNode true
                }
            }
            steps {
                echo 'Hello World2'

                sh """
                ls -la
                npm -version
                node -version
                ls -la
                """
            }
        }
    }
}
